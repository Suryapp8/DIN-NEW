{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://www.dumpitnow.in",
        "type": 301
      },
      {
        "source": "https://dumpitnow.in/**",
        "destination": "https://www.dumpitnow.in",
        "type": 301
      }
    ]
  }
}
